# Database Configuration
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=your_database_name

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Security Configuration
SECRET_KEY=your_very_secure_secret_key_here_min_32_chars

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Environment
ENVIRONMENT=development

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,xlsx,csv,txt

# Logging Configuration
LOG_LEVEL=INFO

# Outlook Configuration
OUTLOOK_CLIENT_ID=your-azure-app-client-id
OUTLOOK_CLIENT_SECRET=your-azure-app-client-secret  
OUTLOOK_TENANT_ID=your-azure-tenant-id
OUTLOOK_SENDER_ADDRESS=your-verified-sender@domain.com
